<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Name="FontTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontStyle" Value="Normal"/>
    </Style>

    <Style x:Name="FontLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontStyle" Value="Normal"/>
    </Style>

    <Style x:Name="ButtonStyle" TargetType="Button">

        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="Background" Value="#0000cc"/>
    </Style>

    <Style x:Name="MainBackground" TargetType="Window">
        <Setter Property="Background" Value="White"/>
    </Style>

</ResourceDictionary>